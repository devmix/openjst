<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="1"
          android:versionName="0.1.1"
          package="org.openjst.client.android">

    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="8"/>

    <supports-screens
            android:anyDensity="true"
            android:largeScreens="true"
            android:normalScreens="true"
            android:smallScreens="true"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>

    <application
            android:debuggable="true"
            android:icon="@drawable/ic_app"
            android:label="@string/app_name"
            android:name="org.openjst.client.android.OpenJSTApplication"
            android:theme="@style/OpenJST.DarkTheme">

        <service android:name="org.openjst.client.android.service.ServerConnectionService"/>

        <activity
                android:label="@string/app_name"
                android:name="org.openjst.client.android.activity.StartupActivity"
                android:theme="@style/OpenJST.DarkTheme.NoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:label="@string/app_name"
                android:name="org.openjst.client.android.activity.LoginActivity"
                android:theme="@style/OpenJST.DarkTheme.NoTitle">
        </activity>
        <activity
                android:label="@string/settings"
                android:name="org.openjst.client.android.activity.SettingsActivity"/>
        <activity
                android:label="@string/register_new_client"
                android:name="org.openjst.client.android.activity.RegisterClientActivity"/>
        <activity
                android:label="@string/schedule_today"
                android:name="org.openjst.client.android.activity.ScheduleTodayActivity"/>
        <activity
                android:label="@string/status"
                android:name="org.openjst.client.android.activity.StatusActivity"/>
        <activity
                android:label="Application"
                android:name="org.openjst.client.android.activity.status.StatusApplicationActivity"/>
        <activity
                android:label="Connection"
                android:name="org.openjst.client.android.activity.status.StatusConnectionActivity"/>
        <activity
                android:label="Traffic"
                android:name="org.openjst.client.android.activity.status.StatusTrafficActivity"/>
        <activity
                android:label="Application update"
                android:name="org.openjst.client.android.activity.ApplicationUpdateActivity"/>
    </application>
</manifest>