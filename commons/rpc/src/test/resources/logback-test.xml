<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--%d{HH:mm:ss.SSS} %logger{1}-->
            <pattern>%d{HH:mm:ss.SSS}[%-10thread] %-5level: %msg%n</pattern>
        </encoder>
    </appender>

    <root level="TRACE">
        <!--<root level="INFO">-->
        <!--<root level="OFF">-->
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>